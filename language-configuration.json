{
    "comments": {
        "blockComment": [ "/*", "*/" ],
    },
    "brackets": [
        /* ["[", "]"], */
		["%%[", "]%%"],
		["%%=", "=%%"],        
        ["(", ")"]
    ],
    "autoClosingPairs": [
        /* ["[", "]"], */
        ["(", ")"],
        ["\"", "\""],
		["%%[", "]%%"],
		["%%=", "=%%"],        
        ["'", "'"]
    ],
    "surroundingPairs": [
        /* ["[", "]"], */
        ["(", ")"],
        ["\"", "\""],
		["%%[", "]%%"],
		["%%=", "=%%"],        
        ["'", "'"]
    ],
	"folding": {
		"markers": {
			"start": "^\\s*(/\\*\\s*#region\\b.*\\*/|/\\*\\s*<.*>\\s*\\*/|if)",
			"end": "^\\s*(/\\*\\s*#endregion\\b.*\\*/|/\\*\\s*</.*>\\s*\\*/|endif)"
		}
	}    
}